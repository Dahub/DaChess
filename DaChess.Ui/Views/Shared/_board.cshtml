
<canvas id="canvas" width="400" height="400" style="border:1px solid #000000;" onclick="getCursorPosition(this, e)"></canvas>

<script type="text/javascript">
    var size = 400;
    var caseSize = size / 8;

    var c = $("#canvas");    
    var ctx = c[0].getContext('2d');

    ctx.fillStyle = "#ffffe6";
    ctx.fillRect(0, 0, size, size);

    ctx.fillStyle = "#190B07";
    var startCase = 1;
    for (posY = 0; posY < 8; posY = posY + 1) {
        for (posX = startCase; posX < 8; posX = posX + 2) {
            ctx.fillRect(posX * caseSize, posY * caseSize, caseSize, caseSize);
        }
        if (startCase == 1) {
            startCase = 0;
        }
        else {
            startCase = 1;
        }
    }
</script>